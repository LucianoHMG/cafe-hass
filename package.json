{
  "name": "hflow",
  "private": true,
  "packageManager": "yarn@4.12.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "build:ha": "npm run build && echo 'âœ“ Built and copied to custom_components/cafe/www/'",
    "test": "vitest",
    "test:cli": "yarn workspace @hflow/transpiler cli",
    "lint": "turbo run lint",
    "lint:biome": "biome lint .",
    "lint:fix": "biome lint --apply .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:biome": "biome format --write .",
    "format:biome:check": "biome format .",
    "check": "biome check .",
    "check:fix": "biome check --write --unsafe .",
    "check:all": "yarn typecheck && yarn lint:biome && yarn format:check",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "prettier": "^3.7.4",
    "tsx": "^4.19.0",
    "turbo": "^2.3.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  }
}
